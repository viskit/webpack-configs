{
  "compilerOptions": {
    "target": "es2015",
    "module": "es6",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["esnext", "dom", "scripthost"],
    "strict": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "sourceMap": true,
    "inlineSources": true,
    "strictNullChecks": false,
    "declaration": true,
    "declarationDir": "dist"
  },
  "exclude": ["node_modules"]
}
